---
import { ACTORS } from "@/consts/actors.ts"
import Actor from "@/components/Actor.astro"
---

<section>
    <h2 class="text-4xl font-bold mb-8">Actores</h2>

    <div class="grid grid-cols-[repeat(auto-fit,minmax(150px,1fr))] justify-items-center gap-8">
        {
            ACTORS.map(({ name, photo, valoration }) => (
                <Actor name={name}, photo={photo} valoration={valoration} />
            ))
        }
    </div>
</section>

<style>
    img {
        box-shadow: 0px 4px 10px rgb(0 0 0 / .5);
    }
</style>