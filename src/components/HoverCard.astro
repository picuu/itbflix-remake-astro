---
interface Props {
    title: string;
    image: string;
    info?: string;
}

const { title, image, info } = Astro.props
---

<article class="relative rounded-lg">
    <div class="absolute inset-0 w-full h-full rounded-lg flex flex-col justify-center gap-6 p-6 bg-black/80 transition duration-500">
        <h2 class="text-2xl font-bold text-center transition duration-500">{title}</h2>
        <p class="text-base text-center transition duration-500">{info}</p>
    </div>
    <img src={image} alt=`Poster of the film ${title}` class="h-full rounded-lg object-cover"/>
</article>

<style>
    article:hover {
        & div {
            background-color: transparent;
        }

        & h2, & p {
            opacity: 0;
            cursor: default;
        }
    }
</style>