---
interface Props {
    title: string;
    image: string;
    sinopsis?: string;
    color?: string;
}

const { title, image, sinopsis, color } = Astro.props
---

<article class="rounded-lg flex flex-col justify-start items-center gap-3 hover:-translate-y-4 hover:cursor-pointer transition duration-300">
    <img src={image} alt=`Poster of the film ${title}` class="h-full rounded-lg object-cover"/>
    <!-- <h2 class="text-md text-center">{title}</h2> -->
</article>

<style define:vars={{ color }}>
    article {
        box-shadow: 0 60px 60px -60px var(--color);
    }
</style>