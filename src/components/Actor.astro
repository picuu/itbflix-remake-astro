---
interface Props {
    name: string;
    photo: string;
    valoration: number;
}

const { name, photo, valoration } = Astro.props
---

<article class="flex flex-col items-center max-w-36 min-w-16">
    <img src={photo} alt=`Portrait of ${name}` class="w-full aspect-square object-cover rounded-full mb-2" />
    <h3 class="text-center">{name}</h3>
    <p class="text-center">{valoration}/10 ‚≠ê</p>
</article>